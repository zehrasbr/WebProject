@using WebProject.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> localizer
@{
    ViewData["Title"] = "GetMore2";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <div class="container">
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="/Services/Index/">@localizer["Services1"]</a></li>
                    <li class="current">@localizer["Details"]</li>
                </ol>
            </nav>
            <h1>@localizer["GetMore2PageHeader"]</h1>
        </div>
    </div><!-- End Page Title -->

    <div class="container">
        <div class="row">

            <div class="col-lg-8">

                <!-- Blog Details Section -->
                <section id="blog-details" class="blog-details section">
                    <div class="container" data-aos="fade-up">

                        <article class="article">

                            <div class="hero-img" data-aos="zoom-in">
                                <img src="~/web/assets/img/cta/img20.png"
                                     alt="@localizer["GetMore2HeroImageAlt"]"
                                     class="img-fluid"
                                     loading="lazy"
                                     style="max-width: 70%; border-radius: 20px; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);">
                            </div>

                            <div class="article-content" data-aos="fade-up" data-aos-delay="100">
                                <div class="content-header">
                                    <h1 class="title">@localizer["GetMore2"]</h1>
                                </div>
                            </div>

                            <div class="content">
                                <p class="lead">@localizer["GetMore2Lead1"]</p>
                                <p class="lead">@localizer["GetMore2Lead2"]</p>
                                <p class="lead">@localizer["GetMore2Lead3"]</p>

                                <div class="content-image right-aligned"></div>

                                <h2>@localizer["SampleCourseContent"]</h2>
                                <p><b>@localizer["FiberOpticLabCoursePlan"]</b></p>
                                <p>@localizer["FiberOpticLabDescription"]</p>

                                <p><b>@localizer["Objective"]</b></p>
                                <p>@localizer["ObjectiveDescription"]</p>

                                <p><b>@localizer["WeeklyCoursePlan"]</b></p>

                                <!-- Haftalık ders planını örnek olarak ilk 3 hafta ekledim, sen devam edebilirsin -->
                                <p><b>@localizer["Week1Title"]</b></p>
                                <ul>
                                    <li><b>@localizer["Week1Topic"]</b></li>
                                    <li><b>@localizer["Week1Goal"]</b></li>
                                    <li><b>@localizer["Week1Experiment"]</b></li>
                                </ul>

                                <p><b>@localizer["Week2Title"]</b></p>
                                <ul>
                                    <li><b>@localizer["Week2Topic"]</b></li>
                                    <li><b>@localizer["Week2Goal"]</b></li>
                                    <li><b>@localizer["Week2Experiment"]</b></li>
                                </ul>

                                <p><b>@localizer["Week3Title"]</b></p>
                                <ul>
                                    <li><b>@localizer["Week3Topic"]</b></li>
                                    <li><b>@localizer["Week3Goal"]</b></li>
                                    <li><b>@localizer["Week3Experiment"]</b></li>
                                </ul>

                                <!-- Geri kalan haftalar da benzer şekilde -->

                                <p><b>@localizer["Assessment"]</b></p>
                                <ul>
                                    <li><b>@localizer["WeeklyReports"]</b></li>
                                    <li><b>@localizer["FinalProject"]</b></li>
                                    <li><b>@localizer["Participation"]</b></li>
                                </ul>

                                <p><b>@localizer["Notes"]</b></p>
                                <ul>
                                    <li>@localizer["Note1"]</li>
                                    <li>@localizer["Note2"]</li>
                                    <li>@localizer["Note3"]</li>
                                </ul>

                            </div>

                        </article>

                    </div>
                </section><!-- /Blog Details Section -->

            </div>

        </div>
    </div>

</main>
