@using WebProject.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> localizer

@{
    ViewData["Title"] = localizer["GetMore"];
    Layout = "~/Views/UILayout/Index.cshtml";
}

<main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <div class="container">
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="/Services/Index/">@localizer["Services2"]</a></li>
                    <li class="current">@localizer["Details1"]</li>
                </ol>
            </nav>
            <h1>@localizer["GetMorePageHeader"]</h1>
        </div>
    </div><!-- End Page Title -->

    <div class="container">
        <div class="row">

            <div class="col-lg-8">

                <!-- Blog Details Section -->
                <section id="blog-details" class="blog-details section">
                    <div class="container" data-aos="fade-up">

                        <article class="article">

                            <div class="hero-img" data-aos="zoom-in">
                                <img src="~/web/assets/img/cta/img22.png"
                                     alt="@localizer["GetMoreHeroImageAlt"]"
                                     class="img-fluid"
                                     loading="lazy"
                                     style="max-width: 70%; border-radius: 20px; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);">
                            </div>

                            <div class="article-content" data-aos="fade-up" data-aos-delay="100">
                                <div class="content-header">
                                    <h1 class="title">@localizer["GetMore"]</h1>
                                </div>
                            </div>

                            <div class="content">
                                <p class="lead">@localizer["GetMoreLead"]</p>

                                <h2>@localizer["GetMoreSection1Title"]</h2>
                                <ul>
                                    <li>@localizer["GetMoreSection1Item1"]</li>
                                    <li>@localizer["GetMoreSection1Item2"]</li>
                                    <li>@localizer["GetMoreSection1Item3"]</li>
                                    <li>@localizer["GetMoreSection1Item4"]</li>
                                    <li>@localizer["GetMoreSection1Item5"]</li>
                                    <li>@localizer["GetMoreSection1Item6"]</li>
                                </ul>

                                <h2>@localizer["GetMoreSection2Title"]</h2>
                                <ul>
                                    <li>@localizer["GetMoreSection2Item1"]</li>
                                    <li>@localizer["GetMoreSection2Item2"]</li>
                                    <li>@localizer["GetMoreSection2Item3"]</li>
                                </ul>

                                <h2>@localizer["GetMoreSection3Title"]</h2>
                                <ul>
                                    <li>@localizer["GetMoreSection3Item1"]</li>
                                    <li>@localizer["GetMoreSection3Item2"]</li>
                                    <li>@localizer["GetMoreSection3Item3"]</li>
                                </ul>
                            </div>
                        </article>
                    </div>
                </section><!-- /Blog Details Section -->

            </div>

        </div>

    </div>

</main>
