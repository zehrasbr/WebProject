@using WebProject.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> localizer

<!-- Pricing Section -->
<style>
    .soft-edges {
        mask-image: radial-gradient(ellipse at center, rgba(0, 0, 0, 1) 60%, rgba(0, 0, 0, 0) 100%);
        -webkit-mask-image: radial-gradient(ellipse at center, rgba(0, 0, 0, 1) 60%, rgba(0, 0, 0, 0) 100%);
    }
</style>
<section id="pricing" class="pricing section light-background">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@localizer["PricingTitle"]</h2>
        <p>@localizer["PricingSubtitle"]</p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="row gy-4">

            <div class="col-lg-4" data-aos="zoom-in" data-aos-delay="100">
                <div class="pricing-item">
                    <h3>@localizer["Product1Title"]</h3>
                    <img src="~/web/assets/img/portfolio/image (56).png" alt="@localizer["Product1Title"]" class="img-fluid mb-3 soft-edges" loading="lazy">
                    <ul>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product1_Feature1"]</span></li>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product1_Feature2"]</span></li>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product1_Feature3"]</span></li>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product1_Feature4"]</span></li>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product1_Feature5"]</span></li>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product1_Feature6"]</span></li>
                    </ul>
                </div>
            </div><!-- End Pricing Item -->

            <div class="col-lg-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="pricing-item featured">
                    <h3>@localizer["Product2Title"]</h3>
                    <img src="~/web/assets/img/portfolio/image (59).png" alt="@localizer["Product2Title"]" class="img-fluid mb-3 soft-edges" loading="lazy">
                    <ul>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product2_Feature1"]</span></li>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product2_Feature2"]</span></li>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product2_Feature3"]</span></li>
                    </ul>
                </div>
            </div><!-- End Pricing Item -->

            <div class="col-lg-4" data-aos="zoom-in" data-aos-delay="300">
                <div class="pricing-item">
                    <h3>@localizer["Product3Title"]</h3>
                    <img src="~/web/assets/img/portfolio/image (62).png" alt="@localizer["Product3Title"]" class="img-fluid mb-3 soft-edges" loading="lazy">
                    <ul>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product3_Feature1"]</span></li>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product3_Feature2"]</span></li>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product3_Feature3"]</span></li>
                        <li><i class="bi bi-check"></i> <span>@localizer["Product3_Feature4"]</span></li>
                    </ul>
                </div>
            </div><!-- End Pricing Item -->

        </div>
    </div>
</section><!-- /Pricing Section -->
