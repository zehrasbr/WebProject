@using WebProject.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> localizer

<!-- Portfolio Section -->
<section id="portfolio" class="portfolio section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@localizer["Infrastructure"]</h2>
        <p>@localizer["InfrastructureDescription"]</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                <li data-filter="*" class="filter-active">@localizer["All"]</li>
                <li data-filter=".filter-app">App</li>
                <li data-filter=".filter-product">Card</li>
                <li data-filter=".filter-branding">Web</li>
            </ul><!-- End Portfolio Filters -->

            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">

                <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app">
                    <img src="~/web/assets/img/portfolio/img1.jpeg" class="img-fluid" alt="">
                    <div class="portfolio-info">
                        <h4></h4>
                        <p></p>
                        <a href="~/web/assets/img/portfolio/img1.jpeg" title="App 1" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                        <a href="/Portfolio/Index/" title="@localizer["Details2"]" class="details-link"><i class="bi bi-link-45deg"></i></a>
                    </div>
                </div><!-- End Portfolio Item -->

                <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-product">
                    <img src="~/web/assets/img/portfolio/img2.jpeg" class="img-fluid" alt="">
                    <div class="portfolio-info">
                        <h4></h4>
                        <p></p>
                        <a href="~/web/assets/img/portfolio/img2.jpeg" title="Product 1" data-gallery="portfolio-gallery-product" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                        <a href="portfolio-details.html" title="@localizer["Details"]" class="details-link"><i class="bi bi-link-45deg"></i></a>
                    </div>
                </div><!-- End Portfolio Item -->

                <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-branding">
                    <img src="~/web/assets/img/portfolio/img3.jpeg" class="img-fluid" alt="">
                    <div class="portfolio-info">
                        <h4></h4>
                        <p></p>
                        <a href="~/web/assets/img/portfolio/img3.jpeg" title="Branding 1" data-gallery="portfolio-gallery-branding" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                        <a href="portfolio-details.html" title="@localizer["Details"]" class="details-link"><i class="bi bi-link-45deg"></i></a>
                    </div>
                </div><!-- End Portfolio Item -->
                <!-- Diğer portfolio item'lar aynı şekilde -->
                <!-- Title ve Description boş bırakılmış. Dilersen buraya da localizer ekleyebilirsin -->

            </div><!-- End Portfolio Container -->

        </div>

    </div>

</section><!-- /Portfolio Section -->
