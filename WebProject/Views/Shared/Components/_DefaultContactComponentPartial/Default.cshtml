@model WebProject.Models.Email
@using WebProject.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> localizer

<!-- Contact Section -->
<style>
    .loading, .error-message, .sent-message {
        display: none !important;
    }

    body {
        font-family: "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", Helvetica, Arial, sans-serif;
    }

    #SubjectType {
        height: calc(1.5em + 0.75rem + 2px);
    }

    .form-control, .form-select {
        border-radius: 12px !important;
    }
</style>

<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@localizer["ContactTitle"]</h2>
        <h5 class="mb-0">@localizer["ContactSubtitle"]</h5>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-5">
                <div class="info-wrap">

                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                        <i class="bi bi-geo-alt flex-shrink-0"></i>
                        <div>
                            <h3>@localizer["AddressTitle"]</h3>
                            <p>A108 Adam Street, New York, NY 535022</p>
                        </div>
                    </div>

                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                        <i class="bi bi-telephone flex-shrink-0"></i>
                        <div>
                            <h3>@localizer["PhoneTitle"]</h3>
                            <p>+1 5589 55488 55</p>
                        </div>
                    </div>

                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-envelope flex-shrink-0"></i>
                        <div>
                            <h3>@localizer["EmailTitle"]</h3>
                            <p>info@realremotelab.com.tr</p>
                        </div>
                    </div>

                    <iframe src="https://www.google.com/maps/embed?pb=..." frameborder="0" style="border:0; width: 100%; height: 270px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>

            <div class="col-lg-7">

                <form id="contactForm" action="/Contact/Index/" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
                    @Html.AntiForgeryToken()
                    <div class="row gy-4">

                        <div class="col-md-6">
                            <label for="Name" class="pb-2">@localizer["FullNameLabel"]</label>
                            <input type="text" name="Name" id="Name" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label for="Mail" class="pb-2">@localizer["EmailLabel"]</label>
                            <input type="email" name="Mail" id="Mail" class="form-control" required />
                        </div>

                        <div class="col-md-8">
                            <label for="Subject" class="pb-2">@localizer["SubjectLabel"]</label>
                            <input type="text" name="Subject" id="Subject" class="form-control" required />
                        </div>

                        <div class="col-md-4">
                            <label for="SubjectType" class="pb-2">@localizer["SubjectTypeLabel"]</label>
                            <select name="SubjectType" id="SubjectType" class="form-select" required>
                                <option value="" disabled selected>@localizer["SelectOption"]</option>
                                <option value="Suggestion">@localizer["SubjectOption_Suggestion"]</option>
                                <option value="Complaint">@localizer["SubjectOption_Complaint"]</option>
                                <option value="Request">@localizer["SubjectOption_Request"]</option>
                                <option value="InfoRequest">@localizer["SubjectOption_InfoRequest"]</option>
                                <option value="TechnicalSupport">@localizer["SubjectOption_TechSupport"]</option>
                                <option value="Collaboration">@localizer["SubjectOption_Collaboration"]</option>
                                <option value="Other">@localizer["SubjectOption_Other"]</option>
                            </select>
                        </div>

                        <div class="col-md-12">
                            <label for="Description" class="pb-2">@localizer["DescriptionLabel"]</label>
                            <textarea name="Description" id="Description" rows="10" class="form-control" required></textarea>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">@localizer["Loading"]</div>
                            <div class="error-message"></div>
                            <div class="sent-message">@localizer["MessageSent"]</div>

                            <button type="submit" class="btn btn-primary mt-3">@localizer["SendMessageButton"]</button>
                        </div>

                    </div>
                </form>

            </div>

        </div>

    </div>

</section><!-- /Contact Section -->
<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById('contactForm').addEventListener('submit', function (e) {
        Swal.fire({
            icon: 'success',
            title: '@localizer["SuccessTitle"]',
            text: '@localizer["SuccessMessage"]',
            confirmButtonText: '@localizer["OkButton"]'
        }).then(() => {
            e.target.submit();
        });

        e.preventDefault();
    });
</script>
