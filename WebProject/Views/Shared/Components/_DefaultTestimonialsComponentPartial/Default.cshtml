                        </div>
                        <p>
                            <i class="bi bi-quote quote-icon-left"></i>
                            <span>@localizer["Testimonial2Content"]</span>
                            <i class="bi bi-quote quote-icon-right"></i>
                        </p>
                    </div>
                </div>

                @* Testimonial 3 *@
                <div class="swiper-slide">
                    <div class="testimonial-item">
                        <img src="~/web/assets/img/person/person-f-12.webp" class="testimonial-img" alt="">
                        <h3>@localizer["Testimonial3Name"]</h3>
                        <h4>@localizer["Testimonial3Title"]</h4>
                        <div class="stars">
                            <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
                        </div>
                        <p>
                            <i class="bi bi-quote quote-icon-left"></i>
                            <span>@localizer["Testimonial3Content"]</span>
                            <i class="bi bi-quote quote-icon-right"></i>
                        </p>
                    </div>
                </div>

                @* Testimonial 4 *@
                <div class="swiper-slide">
