@using WebProject.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> localizer

@{
    var currentCulture = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
    var switchTo = currentCulture == "tr" ? "en" : "tr";
    var switchLabel = currentCulture == "tr" ? "EN" : "TR";
}

<style>
    .btn-circle {
        width: 40px;
        height: 40px;
        padding: 0;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease, color 0.3s ease;
        user-select: none;
    }

    .btn-dashboard {
        background-color: #47B2E4; 
        color: white;
        border: none;
    }

        .btn-dashboard:hover {
            background-color: #0d6efd;
            color: white;
            text-decoration: none;
        }

    .btn-lang-switch {
        background-color: white;
        border: 2px solid #0d6efd;
        color: #0d6efd;
    }

        .btn-lang-switch:hover {
            background-color: #0d6efd;
            color: white;
            text-decoration: none;
        }
</style>

<header id="header" class="header d-flex align-items-center sticky-top">
    <div class="container-fluid container-xl position-relative d-flex align-items-center">

        <a href="/Default/Index/" class="logo d-flex align-items-center me-auto">
            <h1 class="sitename">RealRemoteLab</h1>
        </a>

        <nav id="navmenu" class="navmenu">
            <ul>
                <li><a href="/Default/Index/">@localizer["Home"]</a></li>
                <li><a href="/About/Index/">@localizer["AboutUs"]</a></li>
                <li><a href="/Services/Index/">@localizer["Services"]</a></li>
                <li><a href="/Portfolio/Index/">@localizer["Infrastructure"]</a></li>
                <li class="dropdown">
                    <a href="#"><span>@localizer["Overview"]</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                    <ul>
                        <li><a href="/Team/Index/">@localizer["TeamMembers"]</a></li>
                        <li><a href="/Pricing/Index/">@localizer["Products"]</a></li>
                        <li><a href="/Testimonial/Index/">@localizer["Testimonials"]</a></li>
                        <li><a href="/Faq/Index/">@localizer["FAQ"]</a></li>
                    </ul>
                </li>
                <li><a href="/Contact/Index/">@localizer["Contact"]</a></li>
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>

        <a class="btn-getstarted me-2" href="/Appointment/Index/">@localizer["GetAppointment"]</a>

   
        <a class="btn-circle btn-dashboard me-2"
           href="https://realremotelab.com"
           title="@localizer["Dashboard"]"
           aria-label="@localizer["Dashboard"]">
            <i class="bi bi-speedometer2"></i>
        </a>

   
        <a class="btn-circle"
           href="/Culture/SetCulture?culture=@switchTo"
           title="@localizer["ChangeLanguage"]"
           aria-label="@localizer["ChangeLanguage"]">@switchLabel</a>

    </div>
</header>
